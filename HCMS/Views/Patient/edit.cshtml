                        <div class="col-md-12 bg-light rounded">
                            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#" aria-current="page">Patient</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Patient Registration</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>

                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionBasic">
                    <div class="accordion-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.medical.bloodType" class="control-label">Blood Type</label>
                                        <select asp-for="@Model.medical.bloodType" class="form-control">
                                            <option value="A+">A+</option>
                                            <option value="A-">A-</option>
                                            <option value="B+">B+</option>
                                            <option value="B-">B-</option>
                                            <option value="O+">O+</option>
                                            <option value="O-">O-</option>
                                            <option value="AB+">AB+</option>
                                            <option value="AB-">AB-</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label asp-for="@Model.medical.allergy" class="control-label">Does the patient have allergy? if not, type "No"</label>
                                            <input asp-for="@Model.medical.allergy" class="form-control" />
                                            <span asp-validation-for="@Model.medical.allergy" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.medical.medication" class="control-label">Does the patient take medication/s? if not, type "No"</label>
                                            <input asp-for="@Model.medical.medication" class="form-control" />
                                            <span asp-validation-for="@Model.medical.allergy" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.medical.diabetic" class="control-label">Is the Patient Diabetic?</label>
                                        <label>Yes</label>
                                        @Html.RadioButtonFor(model => model.medical.diabetic, "No", new { @checked = "checked" })
                                        <label>No</label>
                                        @Html.RadioButtonFor(model => model.medical.diabetic, "Yes")
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.medical.surgery" class="control-label">Does the Patient Undergo any Surgery or an Operation? if not, type "No"</label>
                                        <input asp-for="@Model.medical.surgery" class="form-control" />
                                        <span asp-validation-for="@Model.medical.surgery" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.medical.vacinated" class="control-label">Is the Patient Vacinated? if not, type "No"</label>
                                        <input asp-for="@Model.medical.vacinated" class="form-control" />
                                        <span asp-validation-for="@Model.medical.vacinated" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    }
