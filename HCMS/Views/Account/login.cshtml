@model LoginUserViewModel


    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form asp-controller="Account" asp-action="Login" method="post">
                        <h3 class="mb-5">Log in</h3>

                        <div class="form-outline mb-4">
                            <span asp-validation-for="UserName"></span>
                            <input asp-for="UserName" type="email" id="typeEmailX-2" class="form-control form-control-lg" />
                            <label asp-for="UserName" class="form-label" for="typeEmailX-2">Email</label>
                        </div>

                        <div class="form-outline mb-4">
                            <span asp-validation-for="Password"></span>
                            <input asp-for="Password" type="password" id="typePasswordX-2" class="form-control form-control-lg" />
                            <label asp-for="Password" class="form-label" for="typePasswordX-2">Password</label>
                        </div>


                        <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>


                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


