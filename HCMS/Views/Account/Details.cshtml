@model EditDoctorViewModel



<h1>Details</h1>

<h4>Doctor</h4>
<hr />

<div class="row" style="border:solid;">
    <h2>Doctor Information</h2>
    <form asp-action="Update" asp-controller="Account" asp-route-Id="@Model.Id">
        <div class="col-md-4" style="border:solid;">
            <div class="form-group">
                <label asp-for="firstName" class="control-label"></label>
                <input readonly asp-for="firstName" class="form-control" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="middleName" class="control-label"></label>
                <input readonly asp-for="middleName" class="form-control" />
                <span asp-validation-for="middleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName"  readonly class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" readonly class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" readonly class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber"  readonly class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gender" class="control-label"></label>
                <label>Male</label>
                @Html.RadioButtonFor(model => model.gender, "Male", new { @checked = "checked", disabled = "disabled" })

                <label>Female</label>
                @Html.RadioButtonFor(model => model.gender, "Female", new { disabled = "disabled" })
            </div>
        </div>
        <div class="col-md-4" style="border:solid;">
            <label asp-for="specialityId" readonly class="control-label">Speciality</label>
            @Html.DropDownListFor( m => m.specialityId ,ViewBag.options as SelectList, new {@class ="form-control", disabled = "disabled"})
            @*@Html.DropDownList("SpecialityId",ViewBag.options as SelectList ,ViewBag.option?[0], new {@class ="form-control"})*@
        </div>
        <div class="form-group">
            <label asp-for="dob" class="control-label"></label>
            <input type="datetime" readonly asp-for="dob" class="form-control" />
            <span asp-validation-for="dob" class="text-danger"></span>
        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
