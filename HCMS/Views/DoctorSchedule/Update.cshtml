@model Schedule

<div class="accordion mt-4 shadow">
    <div class="accordion-item">
        <h1 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Create Doctor Schedule
            </button>
        </h1>
        <div class="container-fluid  py-2">
            <div class="row">
                <div class="col-md-12 bg-light rounded">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" aria-current="page">Doctor</a></li>
                            <li class="breadcrumb-item active" aria-current="page"> Create Doctor Schedule</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionBasic">
            <div class="accordion-body">
                <div class="container-fluid">
                    <form asp-action="Update" id="form-spinner" method="post" asp-controller="DoctorSchedule">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="doctorId" class="control-label">Doctor: </label>
                                    @Html.DropDownListFor( m => m.doctorId ,ViewBag.options as SelectList, new {@class ="form-control", disabled = "disabled"})
                                    <input type="text" asp-for="doctorId" hidden class="form-control" />
                                    <span asp-validation-for="doctorId" class="text-danger"></span>
                                    @*@Html.DropDownList("doctorId",ViewBag.options as SelectList ,ViewBag.option?[0], new {@class ="form-control"})*@
                                </div>
                                <div class="form-group">
                                    <label asp-for="dayOfWeek" class="control-label"  >Select Day of Schedule</label>
                                    <select asp-for="dayOfWeek" disabled class="form-control">
                                        <option value="Monday">Monday</option>
                                        <option value="Tuesday">Tuesday</option>
                                        <option value="Wednesday">Wednesday</option>
                                        <option value="Thursday">Thursday</option>
                                        <option value="Friday">Friday</option>
                                        <option value="Saturday">Saturday</option>
                                        <option value="Sunday">Sunday</option>
                                    </select>
                                    <span asp-validation-for="dayOfWeek" class="text-danger"></span>
                                    <input type="text" asp-for="dayOfWeek" hidden class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="startTime" class="control-label">Select a start time</label>
                                    <input type="time" asp-for="startTime" class="form-control" />
                                    <span asp-validation-for="startTime" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="endTime" class="control-label">Select end time</label>
                                    <input type="time" asp-for="endTime" class="form-control" />
                                    <span asp-validation-for="endTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                    <div class="mt-3">
                        <a class="btn btn-primary" asp-action="DoctorScheduleList" title="back"><i class="fas fa-caret-left"></i></a>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>