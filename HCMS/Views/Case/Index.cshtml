@{
}

<div class="accordion mt-4">
    <div class="accordion-item">
        <h1 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Patient Case List
            </button>
        </h1>
        <div class="container-fluid  py-2">
            <div class="row">
                <div class="col-md-12 bg-light rounded">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" aria-current="page">Patient</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Patient Case List</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionBasic">
            <div class="accordion-body">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-12 bg-light rounded">
                            <table class="table table-hover table-responsive-lg rounded" id="doctorList">
                                <thead class="thead-dark bg-primary">
                                    <tr>
                                        @*  <th scope="col">#</th>*@
                                        <th scope="col" style="text-align: center" class="text-white">Patient Case</th>
                                        <th scope="col" style="text-align: center" class="text-white">Patient Name</th>
                                        <th scope="col" style="text-align: center" class="text-white">Reason</th>
                                        <th scope="col" style="text-align: center" class="text-white">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in Model)
                                    {

                                        <tr>
                                            @* <th scope="row"> @number++</th>*@
                                            <td style="text-align: center">@p.fullcase</td>
                                            <td style="text-align: center">@p.patient.FullName</td>
                                            <td style="text-align: center">@p.reason</td>
                                            <td style="text-align: center">
                                                @*no functionalities pa*@
                                               <a class="btn btn-info" asp-controller="Case" asp-action="Details" title="Details" asp-route-Id="@p.Id">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a class="btn btn-secondary" asp-controller="Case" title="Update" asp-action="Update" asp-route-Id="@p.Id">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a class="btn btn-danger" asp-controller="Case" title="Delete" asp-action="Delete" asp-route-Id="@p.Id">
                                                    <i class="fas fa-user-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>